%h2 Showing Enterprise

.details
  %ol
    %li
      %label Enterprise Name
      = @enterprise.name
    %li{ :class => :status }
      %label Status
      - unless @enterprise.status.nil?
        %span{ :class => @enterprise.status[:status], :title => @enterprise.status[:message] }= @enterprise.status[:status].to_s.upcase
    %li
      %label First Name
      = @enterprise.user.first_name
    %li
      %label Last Name
      = @enterprise.user.last_name
    %li
      %label Email Address
      = @enterprise.user.email_address
    %li
      %label Total Price
      = number_to_currency(@enterprise.total_price, :unit => "$")
    = render :partial => "admin/enterprises/parameter", :collection => @enterprise.parameters

%div{ :class => :approval }
  - if @enterprise.status[:status] == :unapproved
    = button_to "Approve", approve_admin_enterprise_path(@enterprise), :confirm => "Are you sure you wish to approve this Enterprise?", :method => :get, :class => :approve
    = button_to "Deny", deny_admin_enterprise_path(@enterprise), :confirm => "Are you sure you wish to deny this Enterprise?", :method => :get, :class => :deny