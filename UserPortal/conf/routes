# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   	Login.login_page
GET		/login/connect							Login.connect
GET 	/login/logout					    	Login.logout

GET 	/producer/listvdc						Producer.listVDC
GET		/producer/vmDetails						Producer.vmDetails
GET 	/producer/listvm					    Producer.listVM
GET 	/producer/listva					    Producer.listVA
POST 	/producer/addtoservicecatalog			Producer.addToServiceCatalog
GET 	/producer/configure						Producer.configure
GET 	/producer/configureExistingOffer		Producer.configureExistingOffer
GET 	/producer/displayOffer 					Producer.displayOffer 

GET 	/producer/index							Producer.index 
POST 	/producer/addUserWithFileName			Producer.addUserWithFileName
POST 	/producer/addUser						Producer.addUser
POST 	/producer/userPhoto						Producer.userPhoto
POST 	/producer/saveConfigure					Producer.saveConfigure 
GET     /producer/subscribedOffers				Producer.subscribedOffers
GET      /producer/disableOffer				Producer.disableOffer


GET 	/consumer/availableoffers				Consumer.availableOffers

GET 	/consumer/servicecatalog				Consumer.ServiceCatalog
GET 	/consumer/offerdetails					Consumer.offerDetails
GET 	/consumer/purchaseconfirmation			Consumer.purchaseConfirmation
GET 	/consumer/deploy					    Consumer.deploy
GET 	/helper/displayIcon						Helper.displayIcon
GET 	/helper/displayImage 					Helper.displayImage
GET 	/consumer/displayIcon					Helper.displayIcon

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all

#*       /{controller}/{action}                  {controller}.{action}
# Import CRUD routes
*     /admin           module:crud