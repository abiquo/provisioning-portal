# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Set context name 
%{ ctx = play.configuration.getProperty('war.context', '') }% 

# Home page
GET      ${ctx}/                                   	Login.login_page
GET		 ${ctx}/login/connect							Login.connect
GET 	 ${ctx}/login/logout					    	Login.logout



GET 	 ${ctx}/ProducerLocal/admin						ProducerLocal.admin

GET 	 ${ctx}/Producer/poe								Producer.poe
GET 	 ${ctx}/Producer/listAllOffers						Producer.listAllOffers
POST 	 ${ctx}/Producer/poe								Producer.poe

GET 	 ${ctx}/ProducerRemote/listvdc						ProducerRemote.listVDC
POST 	 ${ctx}/ProducerRemote/listvdc						ProducerRemote.listVDC
GET		 ${ctx}/ProducerRemote/vmDetails					ProducerRemote.vmDetails
GET 	 ${ctx}/ProducerRemote/listvm					    ProducerRemote.listVM
GET 	 ${ctx}/ProducerRemote/listva					    ProducerRemote.listVA
POST 	 ${ctx}/ProducerRemote/addtoservicecatalog			ProducerRemote.addToServiceCatalog
GET 	 ${ctx}/ProducerRemote/configure					ProducerRemote.configure

GET 	 ${ctx}/ProducerLocal/configureExistingOffer		ProducerLocal.configureExistingOffer
GET 	 ${ctx}/ProducerLocal/displayOffer 				ProducerLocal.displayOffer 
POST 	 ${ctx}/ProducerLocal/saveConfigure				ProducerLocal.saveConfigure 
GET      ${ctx}/ProducerLocal/subscribedOffers				ProducerLocal.subscribedOffers
POST     ${ctx}/ProducerLocal/subscribedOffers				ProducerLocal.subscribedOffers
GET      ${ctx}/ProducerLocal/disableOffer					ProducerLocal.disableOffer

GET 	 ${ctx}/MarketEnable/publishOffersPerMarket 		MarketEnable.publishOffersPerMarket
GET      ${ctx}/MarketEnable/marketEnable					MarketEnable.marketEnable
POST     ${ctx}/MarketEnable/marketEnable					MarketEnable.marketEnable
GET      ${ctx}/MarketEnable/enable						MarketEnable.Enable
GET      ${ctx}/MarketEnable/saveMKTConfiguration			MarketEnable.saveMKTConfiguration
GET      ${ctx}/MarketEnable/enableMKTConfiguration        MarketEnable.enableMKTConfiguration
GET      ${ctx}/MarketEnable/publishMarket					MarketEnable.publishMarket
POST     ${ctx}/MarketEnable/saveMarketView				MarketEnable.saveMarketView

GET 	 ${ctx}/consumer/availableoffers				Consumer.availableOffers
GET 	 ${ctx}/consumer/availableoffersAll			Consumer.availableOffersAll
GET      ${ctx}/consumer/purchasedOffers               Consumer.purchasedOffers
GET 	 ${ctx}/consumer/servicecatalog				Consumer.ServiceCatalog
GET 	 ${ctx}/consumer/offerdetails					Consumer.offerDetails
GET 	 ${ctx}/consumer/purchaseconfirmation			Consumer.purchaseConfirmation
GET 	 ${ctx}/consumer/deploy					    Consumer.deploy
GET 	 ${ctx}/consumer/undeploy					    Consumer.undeploy
GET 	 ${ctx}/consumer/deleteOffer					Consumer.deleteOffer
GET 	 ${ctx}/consumer/resumeOffer					Consumer.resumeOffer
GET 	 ${ctx}/consumer/resetOffer					Consumer.resetOffer
GET 	 ${ctx}/helper/displayIcon						Helper.displayIcon
GET 	 ${ctx}/helper/displayIconName				    Helper.displayIconName
GET 	 ${ctx}/helper/displayImage 					Helper.displayImage
GET 	 ${ctx}/consumer/displayIcon					Helper.displayIcon
 
# Ignore favicon requests
GET      ${ctx}/favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET      ${ctx}/public/                                staticDir:public

# Catch all

#*        ${ctx}/{controller}/{action}                  {controller}.{action}
# Import CRUD routes
#*      ${ctx}/admin           module:crud
